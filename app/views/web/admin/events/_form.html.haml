= f.input :title      
= f.input :state_event, :as => :state_event
= f.input :thesises, as: :ckeditor
= f.input :start_time, as: :date_time_picker
= f.input :finish_time, as: :date_time_picker
= f.association :workshop, as: :chosen_select
= f.association :hall, as: :chosen_select
