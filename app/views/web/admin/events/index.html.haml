.page-header
  %h1=t '.title'

= link_to t('.new'), new_admin_event_path, class: 'btn btn-primary'
= link_to t('.workshops'), admin_workshops_path, class: 'btn btn-info'

%table.table.table-striped
  %thead
    %tr
      %th= BaseEvent.human_attribute_name :title
      %th= BaseEvent.human_attribute_name :start_time
      %th= t '.actions'
  %tbody
    - @events.each do |event|
      %tr
        %td= link_to event.title, edit_admin_event_path(event)
        %td= event.start_time
        %td
          = link_to t('.edit'), edit_admin_event_path(event), :class => 'btn btn-mini'