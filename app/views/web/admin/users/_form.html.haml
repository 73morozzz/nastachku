= simple_form_for @user, url: [:admin, @user], html: { class: 'form-horizontal' } do |f|
  .row
    .span10
      = f.input :state_event, :as => :state_event
      = f.input :first_name
      = f.input :last_name
      = f.input :city
      = f.input :company
      = f.input :about, :as => :text, :input_html => { :cols => 50, :rows => 3 }
      = f.input :position
      = f.input :email
      = f.input :password
      -#= f.input :password_confirmation
      = f.input :photo, as: :image_preview
      = f.input :show_as_participant
      = f.input :admin
      = f.input :role, include_blank: false
      = f.association :topics, as: :chosen_select, input_html: { multiple: true }

  .form-actions
    = f.button :submit, :class => 'btn btn-primary'
    = link_to t('.cancel'), admin_users_path, :class => 'btn'