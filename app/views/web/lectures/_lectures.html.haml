- @lectures.each do |lecture|
  %li.lectures__item{id: "lecture_#{lecture.id}"}
    .lectures__item-img
      = image_tag lecture.user.decorate.user_pic, width: 350
      = lecture.workshop_color_icon
    .lectures__item-name
      %b
        = lecture.user.decorate.full_name
      = lecture.user.company
      ,
      = lecture.user.position
    .lectures__item-about
      %h4
        = lecture.title
    .lectures__item-desc
      %p.open_this
        = lecture.thesises
    .lectures__item__adding
      .lectures__item__add
        - if signed_in?
          - unless user_is_listener?(lecture)
            %span.voting_button.lectures__item__add-add{ data: { id: lecture.id } } Я пойду на доклад
            %p.lecture_added.lectures__item__add-added{ style: "display: none" } Доклад добавлен в вашу программу
          - else
            %span.voting_button.lectures__item__add-add.added{ data: { id: lecture.id } } Удалить доклад
            %p.lecture_added.lectures__item__add-added Доклад добавлен в вашу программу
        - else
          %span.lectures__item__add-add.added Я пойду на доклад
          %p.lectures__item__add-added Требуется регистрация на конференции
      .lectures__item-social
        %p.open_this Поделиться с друзьями:
        .share42init{data: {path: root_url + "assets/", url: "#{lectures_url}?lecture_id=#{lecture.id}", title: "#{lecture.title}(#{lecture.user.decorate.full_name})", image: "#{root_url}/assets/#{lecture.user.decorate.user_pic}", description: lecture.thesises}}
