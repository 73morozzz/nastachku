!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %link{:href => "/favicon.ico", :rel => "icon", :type => "image/x-icon"}/
    %link{:href => "/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}/
    %meta{:content => "http://nastachku.ru/assets/fb_logo.png", :property => "og:image"}
    %title= content_for?(:title) ? yield(:title) : "Nastachku"
    = analytics_init if Rails.env.production?
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"

  %body
    .navbar.navbar-floating-top.navbar-inverse
      .navbar-inner
        .container
          .container.nav-collapse
            %ul.nav
              - unless signed_in?
                %li= link_to t(".login"), new_session_path
              - if signed_in?
                %li= link_to current_user.full_name, edit_account_path
                %li= link_to '/', '#'
                %li= link_to t('.logout'), session_path, :method => :delete


    .main
      = render "layouts/web/shared/header"
      = render "layouts/web/shared/navigation"
      .container
        .content
          = bootstrap_flash
          = yield

        %br/

    = render "layouts/web/shared/reformal"
    = render "layouts/web/shared/footer"