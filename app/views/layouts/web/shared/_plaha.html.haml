.infoline
  .layout-line
    %p.infoline__left
      %b 11-12 апреля,
      Ленинский мемориал, Ульяновск
    %p.infoline__right
      Стоимость участия на данный момент -
      %b
        = configus.platidoma.ticket_price
        p
- if is_main_page?
  .mainadv
    - banner = rand(3)
    -# if banner == 0
    .mainadv__banner__dollar
      %h2.plaha_main_text
        = t('.buy_a_ticket')
      %p
        Стоимость участия -
        %b 1500
        %span.rouble i
        %b / 2 дня
      - unless current_user_paid_for_conference?
        = link_to t(".buy_a_ticket"), ticket_account_buy_path, method: :post
    -# else
      - banner += 1
    -# elsif banner == 1
      .mainadv__banner__girl
        %h2.girl_shirt_text
          = t('.girl_shirt_costs')
          %span.rouble i
        = link_to t(".buy_shirt"), "#{edit_account_path}#products"
    -# elsif banner == 2
      .mainadv__banner__boy
        %h2.boy_shirt_text
          = t('.boy_shirt_costs')
          %span.rouble i
        = link_to t('.buy_shirt'), "#{edit_account_path}#products"
- else
  .mainadv.mainadv__mini
  .mainadv
    - banner = rand(3)
    .mainadv__banner__dollar
      %h2.plaha_main_text
        = t('.buy_a_ticket')
      %p
        Стоимость участия -
        %b 1500
        %span.rouble i
        %b / 2 дня
      - unless current_user_paid_for_conference?
        = link_to t(".buy_a_ticket"), ticket_account_buy_path, method: :post
